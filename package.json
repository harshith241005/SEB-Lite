{
  "name": "seb-lite",
  "version": "1.0.0",
  "description": "Secure Exam Browser Lite",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run install-all && concurrently \"npm run backend\" \"npm run frontend\" \"npm run electron\"",
    "start-dev": "npm run install-all && concurrently \"npm run backend\" \"npm run frontend\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "install-all": "npm install && npm --prefix backend install && npm --prefix frontend install",
    "backend": "npm --prefix backend start",
    "frontend": "npm --prefix frontend start",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron . --dev",
    "test": "npm --prefix backend run test",
    "test-api": "node scripts/api-test.js",
    "test-full": "node scripts/full-test.js",
    "setup-db": "scripts\\setup-mongodb.bat",
    "deploy": "node scripts/deploy.js",
    "verify": "node scripts/verify-system.js",
    "db-init": "node scripts/db-init.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.0.0",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.0.1"
  },
  "keywords": ["exam", "browser", "secure"],
  "author": "",
  "license": "ISC"
}
